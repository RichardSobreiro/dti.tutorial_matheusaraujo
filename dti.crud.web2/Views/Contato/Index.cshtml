@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="../../Scripts/Contato/Contato.js" type="text/javascript"></script>
<link href="../../Content/Grupo/Grupo.css" rel="stylesheet" type="text/css"/>

<div class="g-row">

    <div class="g-col-6">

        <h3>Lista de Contatos</h3>

            <div id="divBuscar">
                Buscar <input type="text" id="inputFiltroContatos">
                <button id="botaoFiltroContatos">Filtrar</button>
            </div>
                
            <hr />
            <table id="tabelaContatos">
                <thead>
                    <tr>
                        <td>Nome</td>
                        <td>Opções</td>
                    </tr>
                </thead>
                <tbody>
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="3">
                            <button id="botaoAbrirInserirContato">Novo Contato</button>
                        </td>
                    </tr>
                </tfoot>
            </table>
    </div>

    <div class="g-col-6" style="display:none" id="divInserirContato">
        <div class="form">
            <input type="hidden" id="inserirContatoId"/>
            <table>
                <thead>
                    <tr>
                        <td colspan="3">
                            <h3>Inserir Contato</h3>
                        </td>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Nome: </td>
                        <td><input type="text" id="inserirContatoNome" /></td>
                    </tr>
                    <tr>
                        <td>Nome do Grupo: </td>
                        <td><input type="text" id="inserirContatoNomeGrupo" /></td>
                    </tr>
                    <tr>
                        <td>Tipo: </td>
                        <td><input type="text" id="inserirContatoTipo" /></td>
                    </tr>
                    <tr>
                        <td>Telefone: </td>
                        <td><input type="text" id="inserirContatoTelefone" /></td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="3">
                            <button id="botaoInserirContato">Inserir</button>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>

    <div class="g-col-6" style="display:none" id="divEditarContatoNome">
        <div class="form">
            <h3>Editar Contato</h3>
            <input type="hidden" id="editarContatoId" />
            Nome: <input type="text" id="editarContatoNome" />
            <hr />
            <button id="botaoEditarContatoNome">Editar</button>
            <button id="botaoEditarContatoNomeCancelar">Cancelar</button>
        </div>
    </div>

    <div class="g-col-6" style="display:none" id="divEditarContatoNome">
        <div class="form">
            <h3>Editar Contato</h3>
            <input type="hidden" id="editarContatoId" />
            Nome: <input type="text" id="editarContatoNome" />
            <hr />
            <button id="botaoEditarContatoNome">Editar</button>
        </div>
    </div>

</div>

